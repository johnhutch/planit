<%= form_for pwhich, remote: true do |f| %>
  <div class="form-group">
    <%= f.label t('label.question') %>
    <%= f.text_field :question, :class => "form-control", :placeholder => t('placeholder.question') %>
    <%= f.hidden_field :plan_id %>
    <%= f.hidden_field :type %>
  </div>

  <div class="form-group">
    <%= f.submit t("button.add_question"), "data-disable-with" => "Saving...", :class => "btn btn-default btn-xs" %></p>
  </div>
<% end %>
