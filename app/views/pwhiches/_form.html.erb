<!-- called by app/views/pwhiches/attach_new.js.erb -->
<div class="js-pwhich-form-container">
  <%= form_for pwhich, :url => save_attach_pwhich_path(plan), remote: true do |f| %>
    <div class="form-group">
      <%= f.label t('label.question') %>
      <%= f.text_field :question, :class => "form-control", :placeholder => t('placeholder.question') %>
    </div>

    <div class="form-group">
      <%= f.submit t("button.add_question"), "data-disable-with" => "Saving...", :class => "btn btn-default " %>
    </div>
  <% end %>
</div>
